<p id="notice"><%= notice %></p>

<h1>Timetables</h1>

<table id="attributes">
  <thead>
    <tr>
      <th>Arrival time</th>
      <th>Departure time</th>
      <th>Station</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timetables.each do |timetable| %>
      <tr>
        <td><%= timetable.arrival_time %></td>
        <td><%= timetable.departure_time %></td>
        <td><%= timetable.station.name %></td>
        <td><%= link_to 'Show', timetable %></td>
        <td><%= link_to 'Edit', edit_timetable_path(timetable) %></td>
        <td><%= link_to 'Destroy', timetable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Timetable', new_timetable_path %>
