<p id="notice"><%= notice %></p>

<p>
  <strong>Address:</strong>
  <%= @station.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @station.phone %>
</p>

<p>
  <strong>Timetable:</strong>

<table id="attributes">
  <thead>
  <tr>
    <th>Name</th>
    <th>Arrival Time</th>
    <th>Departure Time</th>
    <th>Trains</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @station.timetables.each do |table| %>
      <tr>
        <td><%= table.name %></td>
        <td><%= table.arrival_time.strftime('%Y-%m-%d %H-%M-%S') %></td>
        <td><%= table.departure_time.strftime('%Y-%m-%d %H-%M-%S') %></td>

        <td>
          <ul>
            <% table.trains.each do |train| %>
                <li><%= train.name %></li>
            <% end %>
          </ul>
        </td>


      </tr>
  <% end %>
  </tbody>
</table>

<br>
</p>

<% if current_user and  current_user.role=="admin"%>
     <%= link_to 'Edit', edit_station_path(@station) %> |
<%= link_to 'Back', stations_path %>
<% end%>